@model IEnumerable<CS481_Hub.Models.BLOGS>

@{
    ViewBag.Title = "ListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TITLE)
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new { id = item.BLOG_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BLOG_ID })
        </td>
    </tr>
}

</table>
