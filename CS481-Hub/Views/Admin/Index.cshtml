@model CS481_Hub.Models.Available_API

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("CreateNewAPI", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h2 id="title">Add new API </h2>
    <hr />
    <div class="form-horizontal addForm">
        <div class="form-group">
            @Html.LabelFor(model => model.API_Name, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.API_Name, new { htmlAttributes = new { @class = "form-control", placeHolder = "Name" } })
                @Html.ValidationMessageFor(model => model.API_Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<style>

    .addForm {
        margin-top: 70px;
        margin-left: 0px;
    }

    #title {
        margin-top: 50px;
    }
</style>