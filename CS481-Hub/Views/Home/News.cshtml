@using CS481_Hub.Helpers;
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var articles = (List<NewsAPI>)ViewData["newsList"];
    var activeAPIs = (List<String>)ViewData["apiList"];
}

<nav class="navbar navbar-default" style="background-color: #525050; margin-top: 40px;">
    <div class="container-fluid" style="margin-top: -35px;">
        <div class="navbar-header">
            <ul class="nav navbar-nav">
                <li style="font-size: 20px;"><a>@Html.ActionLink("Home", "Index", "Home")</a></li>
                @if (activeAPIs.Contains("WeatherAPI"))
                {
                    <li style="font-size: 20px;"><a>@Html.ActionLink("Weather", "Weather", "Home")</a></li>
                }
                @if (activeAPIs.Contains("NewsAPI"))
                {
                    <li style="font-size: 20px;"><a>@Html.ActionLink("News", "News", "Home", null, new { @style = "color: #0ce3ac;" })</a></li>
                }
                @if (activeAPIs.Contains("TranslateAPI"))
                {
                    <li style="font-size: 20px;"><a>@Html.ActionLink("Translation", "Translation", "Home")</a></li>
                }
                @if (activeAPIs.Contains("RandomFactAPI"))
                {
                    <li style="font-size: 20px;"><a>@Html.ActionLink("Random Fact", "RandomFact", "Home")</a></li>
                }
                <li style="font-size: 20px;"><a>@Html.ActionLink("Blog", "ListView", "Blog")</a></li>
            </ul>
        </div>
    </div>
</nav>


<div class="jumbotronNews">
    <div class="jumbotron">
        <h1 id="title">Top Headlines</h1>
        <hr />
        @foreach (var article in @articles) // Print the list
        {
            <h3>"@article.getTitle()" - @article.getSource()</h3>
            <a href="@article.getURL()">Read More</a>
            <hr />
        }
    </div>
</div>

<style>
    .jumbotronNews {
        margin-top: 20px;
    }

    #title {
        text-align: center;
        margin-top: -10px;
        font-size: 40px;
        margin-bottom: 10px;
    }

</style>


