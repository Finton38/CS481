@{
    ViewBag.Title = "Home Page";
}
@{
    var activeAPIs = (List<String>)ViewData["apiList"];
}

@if (Request.IsAuthenticated)
{

    <nav class="navbar navbar-default" style="background-color: #525050; margin-top: 40px;">
        <div class="container-fluid" style="margin-top: -35px;">
            <div class="navbar-header">
                <ul class="nav navbar-nav">
                    <li style="font-size: 20px;"><a>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "color: #0ce3ac;" })</a></li>
                    @if (activeAPIs.Contains("WeatherAPI"))
                    {
                        <li style="font-size: 20px;"><a>@Html.ActionLink("Weather", "Weather", "Home")</a></li>
                    }
                    @if (activeAPIs.Contains("NewsAPI"))
                    {
                        <li style="font-size: 20px;"><a>@Html.ActionLink("News", "News", "Home")</a></li>
                    }
                    @if (activeAPIs.Contains("TranslateAPI"))
                    {
                        <li style="font-size: 20px;"><a>@Html.ActionLink("Translation", "Translation", "Home")</a></li>
                    }
                    @if (activeAPIs.Contains("RandomFactAPI"))
                    {
                        <li style="font-size: 20px;"><a>@Html.ActionLink("Random Fact", "RandomFact", "Home")</a></li>
                    }
                    @if (activeAPIs.Contains("BlogAPI"))
                    {
                        <li style="font-size: 20px;"><a>@Html.ActionLink("Blog", "ListView", "Blog")</a></li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>


    <div class="jumbotronContainerLogin">
        <div class="jumbotron">
            <h1 style="text-align:center;">MyHub</h1>
            <h3 style="text-align:center;">All of your selected APIs will be available in the navigation above!</h3>
            <h3 style="text-align:center;">Click below or visit the edit profile page to select which APIs </h3>
            <button class="btn btn-default selectionButton" onclick="window.location.href='/API/Index'"><br>API<br>Selection<br><br></button>
        </div>
    </div>
}

else
{
    <div class="jumbotronContainerDefault">
        <div class="jumbotron">
            <h1 style="text-align:center;">Welcome to MyHub!</h1>
            <h2 style="text-align:center;">MyHub provides popular APIs to be used with ease!</h2>
            <h3 style="text-align:center;"><a onclick="window.location.href='/Account/Register'">sign up now!</a></h3>
        </div>
    </div>

}

<style>

    .jumbotronContainerDefault {
        margin-top: 80px;
    }

    .jumbotronContainerLogin {
        margin-top: 40px;
    }

    .selectionButton {
        margin: 40px auto;
        display: flex;
        justify-content: center;
        width: 240px;
        height: 100px;
        margin-top: 30px;
        font-size: 15px;
        text-align: center;
    }
</style>