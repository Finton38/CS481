@model IEnumerable<CS481_Hub.Models.USER_API_XREF>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table"><br />
    <tr>
        <th>
            @Html.DisplayName("API")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Available_API.API_Name)
            </td>
            <td>
                @if (item.void_ind == "y")
                {
                    @Html.ActionLink("Turn on", "TurnOn", new { id = item.xref_id }, new { @style = "text-decoration: none; class: @class = btn btn - default;"})
               }
                else
                {
                        @Html.ActionLink("Turn off", "TurnOff", new { id = item.xref_id }, new { @style = "text-decoration: none;" })
                }

            </td>
        </tr>
    }

</table>
